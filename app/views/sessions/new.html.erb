<% provide(:title, "Log in") %>
<h1>Log in</h1>

    <%= form_for(:session, url: login_path, html: {class: "form-horizontal"}) do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "control-label col-sm-4" %>
        <div class="col-sm-4">
          <%= f.email_field :email, class: 'form-control', placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label col-sm-4" %>
        <div class="col-sm-4">
          <%= f.password_field :password, class: 'form-control' %>
          <%= link_to "(forgot password)", new_password_reset_path %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <div class="text-center">
          <%= f.check_box :remember_me , class: 'col-sm-8'%>
          <span>Remember me on this computer</span>
        </div>
        <% end %>
      </div>

      <div class="text-center">
        <%= f.submit "Log in", class: "btn btn-custom custom" %>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      </div>
    <% end %>


