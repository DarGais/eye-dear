  </div>

  <label class="col-sm-4"></label>
  <div class="form-inline">
    <%= f.check_box :field7_enable , class: 'move-left'%>
    <%= f.text_field :field7_name, class: 'form-control', placeholder: :field7_name %>
  </div>

