  <div class="form-inline">
    <%= f.check_box :field8_enable , class: 'move-left'%>
    <%= f.text_field :field8_name, class: 'form-control', placeholder: :field8_name %>
  </div>
</div>

<div class="form-group">
  <%= f.label :api_key, class: "control-label col-sm-4" %>
  <div class="col-sm-4">
    <%= f.text_field :api_key, class: "form-control", :value => @channel.api_key %>
